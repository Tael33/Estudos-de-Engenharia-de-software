      "sensivel_a_maiusculas_minusculas": false
    },
    "extensao": {
      "ativada": true,
      "mapa": {
        ".jpg": "IMAGENS/JPG",
        ".jpeg": "IMAGENS/JPG",
        ".png": "IMAGENS/PNG",
        ".gif": "IMAGENS/GIF",
        ".pdf": "DOCUMENTOS/PDF",
        ".docx": "DOCUMENTOS/Word",
        ".doc": "DOCUMENTOS/Word",
        ".xlsx": "DOCUMENTOS/Excel",
        ".xls": "DOCUMENTOS/Excel",
        ".pptx": "APRESENTACOES",
        ".txt": "TEXTOS",
        ".zip": "COMPACTADOS",
        ".rar": "COMPACTADOS",
        ".mp3": "AUDIO/MP3",
        ".wav": "AUDIO/WAV",
        ".mp4": "VIDEOS/MP4",
        ".mkv": "VIDEOS/MKV",
        ".mov": "VIDEOS/MOV",
        ".py": "SCRIPTS/Python"
